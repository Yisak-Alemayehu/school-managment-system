# ============================================================
# Urjiberi School ERP — Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# On cPanel: place .env in the project root (same level as public/)
# NEVER commit .env to version control!
# ============================================================

# ── Application ──────────────────────────────────────────────
APP_ENV=production
APP_URL=https://yourdomain.com
# If installed in a subdirectory: APP_URL=https://yourdomain.com/school

# ── Database (cPanel format: cpanelusername_dbname) ──────────
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cpaneluser_urjiberi
DB_USER=cpaneluser_dbuser
DB_PASS=your_database_password

# ── Payment Gateways (optional) ─────────────────────────────
TELEBIRR_APP_ID=
TELEBIRR_APP_KEY=
TELEBIRR_SHORT_CODE=
TELEBIRR_PUBLIC_KEY=
TELEBIRR_API_URL=https://app.ethiomobilemoney.et:2121

CHAPA_SECRET_KEY=
